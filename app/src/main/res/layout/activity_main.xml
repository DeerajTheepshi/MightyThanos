<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/infinitywar"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:id="@+id/home">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/cardview_dark_background"
        card_view:cardElevation="@dimen/cardview_compat_inset_shadow"
        android:id="@+id/selectorCard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:elevation="@dimen/cardview_default_elevation"
                android:background="@drawable/infinitywar"
                android:id="@+id/color_change"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/color_change"
                android:layout_margin="5dp"
                android:background="@color/buttoncolor"
                android:elevation="@dimen/cardview_default_elevation"
                android:text="Grab your stone!"
                android:textStyle="bold"
                android:id="@+id/select_button"
                android:onClick="stoneSelector"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/color_change"
                android:elevation="@dimen/cardview_default_elevation"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:background="@color/buttoncolor"
                android:layout_below="@id/select_button"
                android:text="Stone Yet to be possessed"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:id="@+id/textview1"
                android:textStyle="bold"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/cardview_dark_background"
        card_view:cardElevation="@dimen/cardview_compat_inset_shadow"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_centerHorizontal="true"
                android:text="STONES INVENTORY"
                android:textStyle="bold"
                android:textSize="28sp"
                android:id="@+id/textview2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textview2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:id="@+id/t1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:visibility="invisible"
                        android:id="@+id/t2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:visibility="invisible"
                        android:id="@+id/t3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:visibility="invisible"
                        android:id="@+id/t4"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:visibility="invisible"
                        android:id="@+id/t5"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:visibility="invisible"
                        android:id="@+id/t6"/>
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/selectorCard"
        android:layout_centerHorizontal="true"
        android:background="@color/buttoncolor"
        android:layout_margin="15dp"
        android:text="RESET"
        android:onClick="reset"/>


</RelativeLayout>